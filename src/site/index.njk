  }
  .navbar a {
    scroll-behavior: smooth;
    cursor: pointer;
    padding: 10px 20px;
    border-radius: 9999px;
    color: #007AFF;
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
  }
  .navbar a:hover {
    background-color: rgba(0, 0, 0, 0.9);
    color: #f7f3e9;
  }
  .profile-photo-container {
    position: absolute; /* Lifts the element out of the document flow */
    width: 100%;
    top: 85px; /* Distance from the top of the page */
    left: 0;
    display: flex;
    justify-content: center;
    z-index: 10; /* Places it on top of the hero video */
  }
  .profile-photo {
    width: 120px;
    height: 120px;
    border-radius: 50%;
