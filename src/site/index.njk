    padding-top: 180px; 
  }
  .wave-bottom {
    position: absolute;
    left: 0;
    width: 100%;
    height: auto;
    bottom: -2px;
  }
  .footer-compact {
    background-color: #111;
    color: #666;
    padding: 25px 20px;
    text-align: center;
  }
  .footer-socials-compact a {
    display: inline-block;
    margin: 0 12px;
  }
  .footer-socials-compact img {
    width: 24px;
    height: 24px;
    filter: invert(0.5); /* Default state for all icons: Makes them grey */
    transition: filter 0.3s ease, transform 0.3s ease;
  }
  /* --- FIX: Only adjust the size of the TikTok icon, let it inherit the filter --- */
  .footer-socials-compact img[alt="TikTok"] {
    width: 26px;
    height: 26px;
  }
  /* On hover, ALL icons will now turn white */
  .footer-socials-compact a:hover img {
    filter: invert(1);
    transform: scale(1.1);
  }
  .footer-copyright-compact {
    margin-top: 20px;
    font-size: 0.85em;
